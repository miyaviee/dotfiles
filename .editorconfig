[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,inc}]
indent_size = 4

[*.txt]
indent_size = 2
indent_style = tab

[*.go]
indent_size = 4
indent_style = tab

[*.{js,json}]
indent_size = 2

[*.{jsx,ts}]
indent_size = 4

[*.{md,markdown}]
indent_size = 4

[*.py]
indent_size = 4

[*.snip]
indent_size = 4
indent_style = tab

[Makefile]
indent_size = 4
indent_style = tab
