layout_virtualenv() {
  local python=${1}
  local venv=$(python --version | cut -d ' ' -f 2)
  if [ -n "${2}" ]; then
    venv=${2}
  fi
  local venv_path=$(direnv_layout_dir)/${venv}
  if [ ! -d ${venv_path} ]; then
    ${python} -m venv ${venv_path}
  fi
  source ${venv_path}/bin/activate
  unset PS1
}
