layout_virtualenv() {
  local python=${1}
  local venv=${2}
  if [ -z ${venv} ]; then
    venv=direnv
  fi
  local venv_path=$(direnv_layout_dir)/${venv}
  if [ ! -d ${venv_path} ]; then
    ${python} -m venv ${venv_path}
  fi
  source ${venv_path}/bin/activate
  unset PS1
}

layout_venv() {
  local python=${1}
  local venv_path=.venv
  if [ ! -d ${venv_path} ]; then
    ${python} -m venv ${venv_path}
  fi
  source ${venv_path}/bin/activate
}
