#!/bin/bash

DIR=`pwd`

brew upgrade --fetch-HEAD
brew cleanup

nvim +:PlugUpdate +:PlugClean +:qa
nvim +:UpdateRemotePlugins +:qa

cd ~/.zplug && git pull -p

cd ${DIR}
type gcloud > /dev/null 2>&1 && gcloud components update
type bundle > /dev/null 2>&1 || gem install bundler

gem update bundler && bundle install
