#!/bin/bash

type brew > /dev/null 2>&1 && brew upgrade --fetch-HEAD && brew cleanup
type gcloud > /dev/null 2>&1 && gcloud components update

nvim +:PlugUpgrade +:PlugUpdate +:PlugClean +:UpdateRemotePlugins +:qa

cd ~/.zplug && git pull -p
zsh -c 'source ~/.zplug/init.zsh; zplug update'
anyenv update
