" CtrlP
inoremap <silent> <C-p> <Esc>:w<CR>:CtrlP<CR>

set wildignore+=*/tmp/*,*/cache/*,*/rw/*,*.so,*.swp,*.zip,*.jpg,*.png

let g:ctrlp_custom_ignore = '\v[\/](node_modules|build)$'

let g:ctrlp_user_command = {
      \ 'types': {
        \ 1: ['.git/', 'cd %s && git ls-files'],
        \ 2: ['.hg/', 'hg --cwd %s locate -I .'],
        \ },
      \ 'fallback': 'find %s -type f | grep -v "^."'
      \ }
