#!/bin/bash

for ver in 2 3; do
  PIP=`which pip${ver} || which pip`
  PYTHON=`which python${ver} || which python`
  DIR=neovim${ver}

  ${PIP} install -U pip
  ${PIP} uninstall -y virtualenv
  ${PIP} install virtualenv
  rm -rf ~/${DIR}
  ${PYTHON} -m virtualenv ~/${DIR}
  source ~/${DIR}/bin/activate
  pip install neovim -U
  deactivate
done
